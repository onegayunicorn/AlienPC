FROM debian:stable-slim

# Install build dependencies
RUN apt-get update && apt-get install -y \
    debootstrap \
    genisoimage \
    qemu-utils \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /build

# Copy project files
COPY . .

# Build script placeholder
CMD ["bash", "-c", "echo 'Building AlienPC ISO...'"]
