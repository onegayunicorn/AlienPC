FROM debian:stable-slim

# Install build dependencies
RUN apt-get update && apt-get install -y \
    debootstrap \
    grub-pc-bin \
    xorriso \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /build

# Copy project files
COPY . .

# Placeholder for ISO generation script
CMD ["bash", "-c", "echo 'Run ./scripts/create_iso.sh to build the ISO.'"]
